# ============================================
# UTOPIAHIRE - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================
# Primary format (used by backend/app/core/config.py):
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Alternative format (used by config/database.py):
DB_HOST=localhost
DB_PORT=5432
DB_NAME=utopiahire
DB_USER=your_db_user
DB_PASSWORD=your_secure_password

# ============================================
# AI/ML CONFIGURATION
# ============================================

# Groq API (REQUIRED - Fast AI inference for resume analysis & interviews)
# Get your key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# GitHub API (OPTIONAL - For Footprint Scanner)
# Get your token from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# StackOverflow API (OPTIONAL - For Footprint Scanner)
# Get your key from: https://stackapps.com/apps/oauth/register
STACKOVERFLOW_KEY=your_stackoverflow_key_here

# ============================================
# JOB SCRAPING APIs (OPTIONAL but recommended)
# ============================================

# SerpAPI - Google Jobs (Primary job search source)
# Get your key from: https://serpapi.com/manage-api-key
SERPAPI_API_KEY=your_serpapi_key_here

# JSearch RapidAPI (Fallback job source)
# Get your key from: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
JSEARCH_API_KEY=your_jsearch_rapidapi_key_here

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME=UtopiaHire
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# ============================================
# SECURITY & JWT
# ============================================
# IMPORTANT: Generate a strong secret key for production
# Use: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins for CORS
# Add your production frontend URL here
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# ============================================
# FILE UPLOAD SETTINGS
# ============================================
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=/tmp/utopiahire_uploads

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_RESUME=10/hour
RATE_LIMIT_JOBS=5/hour
RATE_LIMIT_INTERVIEW=20/hour
RATE_LIMIT_FOOTPRINT=10/hour

# ============================================
# OPTIONAL SERVICES
# ============================================

# OpenAI API (Not currently used, reserved for future features)
# OPENAI_API_KEY=your_openai_api_key_here

# Email Service (Not currently configured)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Redis (For caching - not currently configured)
# REDIS_URL=redis://localhost:6379/0

# Celery (For background tasks - not currently configured)
# CELERY_BROKER_URL=redis://localhost:6379/1
# CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ============================================
# DEPLOYMENT SETTINGS (Production Only)
# ============================================

# Server Configuration
# HOST=0.0.0.0
# PORT=8000

# Database Connection Pool
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=10

# Logging
# LOG_FILE=/var/log/utopiahire/app.log
# LOG_MAX_BYTES=10485760
# LOG_BACKUP_COUNT=5

# Monitoring (Future)
# SENTRY_DSN=your_sentry_dsn_here
# SENTRY_ENVIRONMENT=production
