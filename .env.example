# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=utopiahire
DB_USER=utopia_user
DB_PASSWORD=your_password_here

# ============================================
# Security Configuration
# ============================================
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# AI Model Configuration (Hugging Face)
# ============================================
NLP_MODEL=distilbert-base-uncased
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
GENERATION_MODEL=facebook/bart-base
MODEL_TEMPERATURE=0.7
MAX_TOKENS=512

# HuggingFace API Token (Required for AI features)
# Get your token from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Interview AI Settings
USE_AI_INTERVIEWER=true
AI_MODEL=mistralai/Mistral-7B-Instruct-v0.2
AI_MAX_TOKENS=800
AI_TEMPERATURE=0.7

# ============================================
# GitHub API Token (Required for Footprint Scanner)
# ============================================
# Create token at: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# External APIs (Optional)
# ============================================

# StackOverflow API Key (Optional - for enhanced footprint scanning)
# Get your key from: https://stackapps.com/apps/oauth/register
STACKOVERFLOW_API_KEY=your_stackoverflow_key_here

# ============================================
# Application Configuration
# ============================================
APP_NAME=UtopiaHire
APP_VERSION=2.0
DEBUG=true
LOG_LEVEL=INFO

# ============================================
# File Upload Settings
# ============================================
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf,docx
UPLOAD_FOLDER=/path/to/data/resumes
OUTPUT_FOLDER=/path/to/data/outputs

# ============================================
# Resume Analysis Settings
# ============================================
MIN_ATS_SCORE=70
MIN_FORMATTING_SCORE=70
MIN_KEYWORD_SCORE=60

# ============================================
# Regional Settings
# ============================================
DEFAULT_REGION=MENA
SUPPORTED_REGIONS=MENA,Sub-Saharan Africa,North Africa

