# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://utopia_user:your_password_here@localhost:5432/utopiahire

# ============================================
# Security Configuration
# ============================================
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# API Keys (Required)
# ============================================

# HuggingFace API Key (Required for AI features)
# Get your key from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# GitHub API Token (Required for Footprint Scanner)
# Create token at: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# External APIs (Optional)
# ============================================

# StackOverflow API Key (Optional - for enhanced footprint scanning)
# Get your key from: https://stackapps.com/apps/oauth/register
STACKOVERFLOW_API_KEY=your_stackoverflow_key_here

# ============================================
# Application Configuration
# ============================================
APP_NAME=UtopiaHire
APP_VERSION=2.0
DEBUG=False

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

